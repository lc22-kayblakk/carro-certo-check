  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      // URL base correta da API FIPE v1
      const baseUrl = "https://parallelum.com.br/fipe/api/v1";
      const marcaSelect = document.getElementById("marca");
      const modeloSelect = document.getElementById("modelo");
      const anoSelect = document.getElementById("ano");
      const valorFipeDiv = document.getElementById("valor-fipe");
      const resultadoContainer = document.getElementById("resultado-container");
      const progressBar = document.getElementById("progress-bar");
      const progressPercentage = document.getElementById("progress-percentage");

      let valorFipeAtual = 0;

      console.log("Script carregado, iniciando busca de marcas...");

      // Sistema de Tabs
      const tabBtns = document.querySelectorAll('.tab-btn');
      const tabContents = document.querySelectorAll('.tab-content-modern');

      tabBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          const tabName = btn.dataset.tab;
          
          tabBtns.forEach(b => b.classList.remove('active'));
          tabContents.forEach(c => c.classList.remove('active'));
          
          btn.classList.add('active');
          document.querySelector(`[data-content="${tabName}"]`).classList.add('active');
        });
      });

      // Carregar marcas
      async function carregarMarcas() {
        try {
          console.log("Buscando marcas...");
          
          // Tentar diferentes URLs (com fallback)
          const urls = [
            `${baseUrl}/carros/marcas`,
            `https://parallelum.com.br/fipe/api/v1/carros/marcas`,
            `https://deividfortuna.github.io/fipe/v1/carros/marcas.json`
          ];
          
          let marcas = null;
          let ultimoErro = null;
          
          for (const url of urls) {
            try {
              console.log("Tentando URL:", url);
              const res = await fetch(url, {
                method: 'GET',
                mode: 'cors',
                headers: {
                  'Accept': 'application/json',
                }
              });
              
              if (res.ok) {
                marcas = await res.json();
                console.log("Sucesso com URL:", url);
                break;
              }
            } catch (err) {
              console.log("Falhou com:", url, err.message);
              ultimoErro = err;
            }
          }
          
          if (!marcas || !Array.isArray(marcas) || marcas.length === 0) {
            throw new Error(ultimoErro?.message || "Nenhuma marca encontrada");
          }
          
          marcaSelect.innerHTML = '<option selected disabled>Selecione a marca</option>';
          marcas.forEach(marca => {
            const opt = document.createElement("option");
            opt.value = marca.codigo;
            opt.textContent = marca.nome;
            marcaSelect.appendChild(opt);
          });
          console.log(`${marcas.length} marcas carregadas com sucesso!`);
        } catch (error) {
          console.error("Erro ao carregar marcas:", error);
          
          marcaSelect.innerHTML = '<option selected disabled>Erro ao carregar marcas</option>';
          
          valorFipeDiv.innerHTML = `<div style="background: #c62828; color: white; padding: 1rem; border-radius: 12px; margin-top: 1rem; text-align: center;">
            ‚ùå N√£o foi poss√≠vel conectar √† API FIPE.<br>
            <small>Poss√≠veis causas:</small><br>
            <small>‚Ä¢ Conex√£o com internet inst√°vel</small><br>
            <small>‚Ä¢ API temporariamente indispon√≠vel</small><br>
            <small>‚Ä¢ Limite de requisi√ß√µes atingido (500/dia)</small><br><br>
            <strong>Aguarde alguns minutos e recarregue a p√°gina.</strong>
          </div>`;
        }
      }

      // Carregar modelos
      marcaSelect.addEventListener("change", async () => {
        try {
          console.log("Buscando modelos...");
          modeloSelect.innerHTML = '<option selected disabled>Carregando...</option>';
          anoSelect.innerHTML = '<option selected disabled>Selecione o ano</option>';
          valorFipeDiv.innerHTML = '';
          
          const marcaId = marcaSelect.value;
          const url = `${baseUrl}/carros/marcas/${marcaId}/modelos`;
          console.log("URL modelos:", url);
          
          const res = await fetch(url);
          
          if (!res.ok) {
            throw new Error(`Erro HTTP! Status: ${res.status}`);
          }
          
          const data = await res.json();
          console.log("Modelos recebidos:", data);
          
          modeloSelect.innerHTML = '<option selected disabled>Selecione o modelo</option>';
          data.modelos.forEach(modelo => {
            const opt = document.createElement("option");
            opt.value = modelo.codigo;
            opt.textContent = modelo.nome;
            modeloSelect.appendChild(opt);
          });
          
          atualizarProgresso();
          console.log(`${data.modelos.length} modelos carregados!`);
        } catch (error) {
          console.error("Erro ao carregar modelos:", error);
          modeloSelect.innerHTML = '<option selected disabled>Erro ao carregar modelos</option>';
          alert("Erro ao carregar modelos. Tente novamente.");
        }
      });

      // Carregar anos
      modeloSelect.addEventListener("change", async () => {
        try {
          console.log("Buscando anos...");
          anoSelect.innerHTML = '<option selected disabled>Carregando...</option>';
          valorFipeDiv.innerHTML = '';
          
          const marcaId = marcaSelect.value;
          const modeloId = modeloSelect.value;
          const url = `${baseUrl}/carros/marcas/${marcaId}/modelos/${modeloId}/anos`;
          console.log("URL anos:", url);
          
          const res = await fetch(url);
          
          if (!res.ok) {
            throw new Error(`Erro HTTP! Status: ${res.status}`);
          }
          
          const anos = await res.json();
          console.log("Anos recebidos:", anos);
          
          anoSelect.innerHTML = '<option selected disabled>Selecione o ano</option>';
          anos.forEach(ano => {
            const opt = document.createElement("option");
            opt.value = ano.codigo;
            opt.textContent = ano.nome;
            anoSelect.appendChild(opt);
          });
          
          atualizarProgresso();
          console.log(`${anos.length} anos carregados!`);
        } catch (error) {
          console.error("Erro ao carregar anos:", error);
          anoSelect.innerHTML = '<option selected disabled>Erro ao carregar anos</option>';
          alert("Erro ao carregar anos. Tente novamente.");
        }
      });

      // Buscar valor FIPE
      anoSelect.addEventListener("change", async () => {
        try {
          console.log("Buscando valor FIPE...");
          valorFipeDiv.innerHTML = '<div class="fipe-badge"><i class="bi bi-hourglass-split"></i> Buscando valor...</div>';
          
          const marcaId = marcaSelect.value;
          const modeloId = modeloSelect.value;
          const anoId = anoSelect.value;
          const url = `${baseUrl}/carros/marcas/${marcaId}/modelos/${modeloId}/anos/${anoId}`;
          console.log("URL valor FIPE:", url);
          
          const res = await fetch(url);
          
          if (!res.ok) {
            throw new Error(`Erro HTTP! Status: ${res.status}`);
          }
          
          const dados = await res.json();
          console.log("Dados FIPE recebidos:", dados);
          
          // Parse do valor FIPE
          const valorString = dados.Valor.replace("R$", "").trim().replace(/\./g, "").replace(",", ".");
          valorFipeAtual = parseFloat(valorString);
          
          console.log("Valor FIPE processado:", valorFipeAtual);
          
          if (isNaN(valorFipeAtual)) {
            throw new Error("Valor FIPE inv√°lido");
          }
          
          valorFipeDiv.innerHTML = `<div class="fipe-badge">üí∞ Valor FIPE: ${dados.Valor}</div>`;
          
          atualizarProgresso();
          console.log("Valor FIPE carregado com sucesso!");
        } catch (error) {
          console.error("Erro ao buscar valor FIPE:", error);
          valorFipeDiv.innerHTML = '<div style="background: #c62828; color: white; padding: 1rem; border-radius: 12px; margin-top: 1rem; text-align: center;">‚ùå Erro ao buscar valor FIPE. Tente novamente.</div>';
        }
      });

      // Atualizar progresso
      function atualizarProgresso() {
        const totalItens = document.querySelectorAll(".checklist-item").length + 3;
        let itensSelecionados = 0;
        
        if (marcaSelect.value && marcaSelect.value !== "Selecione a marca") itensSelecionados++;
        if (modeloSelect.value && modeloSelect.value !== "Selecione o modelo") itensSelecionados++;
        if (anoSelect.value && anoSelect.value !== "Selecione o ano") itensSelecionados++;
        
        document.querySelectorAll(".checklist-item").forEach(item => {
          if (item.value !== "") itensSelecionados++;
        });
        
        const porcentagem = Math.round((itensSelecionados / totalItens) * 100);
        progressBar.style.width = `${porcentagem}%`;
        progressPercentage.textContent = `${porcentagem}%`;
      }

      document.querySelectorAll(".checklist-item").forEach(item => {
        item.addEventListener("change", atualizarProgresso);
      });

      // Calcular valor final
      document.getElementById("checklist-form").addEventListener("submit", function (e) {
        e.preventDefault();

        if (isNaN(valorFipeAtual) || valorFipeAtual === 0) {
          alert("Por favor, selecione marca, modelo e ano primeiro.");
          return;
        }

        const itens = document.querySelectorAll(".checklist-item");
        let fatorTotal = 0;
        let notaTotal = 0;

        itens.forEach(item => {
          const valor = item.value;
          if (valor === "regular") {
            fatorTotal += parseFloat(item.dataset.regular || 0);
            notaTotal += 1;
          } else if (valor === "ruim") {
            fatorTotal += parseFloat(item.dataset.ruim || 0);
            notaTotal += 2;
          } else if (valor === "grande") {
            fatorTotal += parseFloat(item.dataset.grande || 0);
            notaTotal += 3;
          }
        });

        const media = notaTotal / itens.length;
        const valorDescontado = valorFipeAtual * fatorTotal;
        const valorFinal = valorFipeAtual - valorDescontado;

        let condicao = "";
        let condicaoClass = "";

        if (valorFinal < valorFipeAtual * 0.5) {
          condicao = "Ruim ‚ùå";
          condicaoClass = "condition-bad";
        } else if (media <= 0.5) {
          condicao = "Bom ‚úÖ";
          condicaoClass = "condition-good";
        } else if (media <= 1.2) {
          condicao = "Aceit√°vel ‚ö†Ô∏è";
          condicaoClass = "condition-acceptable";
        } else {
          condicao = "Ruim ‚ùå";
          condicaoClass = "condition-bad";
        }

        document.getElementById("valor-fipe-resultado").textContent = valorFipeAtual.toLocaleString("pt-BR", { style: "currency", currency: "BRL" });
        document.getElementById("desconto-resultado").textContent = valorDescontado.toLocaleString("pt-BR", { style: "currency", currency: "BRL" });
        document.getElementById("valor-final-resultado").textContent = valorFinal.toLocaleString("pt-BR", { style: "currency", currency: "BRL" });
        
        const condicaoEl = document.getElementById("condicao-resultado");
        condicaoEl.textContent = condicao;
        condicaoEl.className = `condition-badge ${condicaoClass}`;
        
        resultadoContainer.style.display = "block";
        resultadoContainer.scrollIntoView({ behavior: "smooth", block: "start" });
      });

      carregarMarcas();
      atualizarProgresso();
    });
  </script>
  
</body>
</html>
