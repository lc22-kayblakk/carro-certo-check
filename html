    <!-- Resultado -->
    <div class="result-container" id="resultado-container">
      <div class="result-grid">
        <div class="result-item">
          <div class="result-label">Valor FIPE</div>
          <div class="result-value" id="valor-fipe-resultado">-</div>
        </div>
        <div class="result-item">
          <div class="result-label">Desconto</div>
          <div class="result-value" id="desconto-resultado">-</div>
        </div>
